<ui:FluentWindow x:Class="EasyChat.Views.MainView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:vm="clr-namespace:EasyChat.ViewModels"
                 xmlns:m="clr-namespace:EasyChat.Models"
                 xmlns:view="clr-namespace:EasyChat.Views"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:Icon ="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:uc="clr-namespace:EasyChat.Controls"
                 mc:Ignorable="d"
                 Height="830" Width="1250" ResizeMode="NoResize" Background="Transparent"
                 WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolTovis"/>
        <m:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <m:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <view:TrayView Grid.Row="0" />
        
        <!--background-->
        <Border CornerRadius="0 20 20 0" Background="#f8f7fc" Grid.Column="1" Grid.ColumnSpan="2" Margin="-25 0 0 0" Grid.RowSpan="2" MouseDown="Border_MouseDown" MouseLeftButtonDown="Boreder_MouseLeftButtonDown"/>

        <!--left menu 1-->
        <Border CornerRadius="20" Grid.RowSpan="2" Panel.ZIndex="2" Background="#6145e3">
            <Grid>
                <!--App tittle-->
                <TextBlock Text="Chat App" Foreground="#FFFFFF" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Center"
                       FontWeight="SemiBold" Margin="0 30 0 0">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>

                <!--account buttons-->
                <StackPanel Margin="0 170 0 0">
                    <!--add button-->
                    <Button Style="{StaticResource leftSideButton}" Command = "{Binding NothingCommand}">
                        <Border Background="Transparent" CornerRadius="3" Width="25" Height="25" BorderThickness="0.8"
                            Margin="-3 0 0 0" BorderBrush="White">
                            <Icon:PackIconMaterial Kind="Plus" Width="10" Height="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--top section-->
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="40 30">
            <!--search textbox-->
            <Grid Width="250"   HorizontalAlignment="Left">
                <Rectangle Width="1" Fill="#e9e9e9" Panel.ZIndex="2" HorizontalAlignment="Left" Margin="130 19 0 19"/>
                <TextBlock Margin="150 0 20 0" VerticalAlignment="Center" Foreground="#868686" Panel.ZIndex="1"
                       IsHitTestVisible="False" Text="Search here ..." 
                       Visibility="{Binding ElementName=txtboxSearch,Converter={StaticResource BoolTovis}}"/>
                <TextBox x:Name="txtboxSearch" Style="{StaticResource searchTextbox}"/>
                <Button HorizontalAlignment="Right" Margin="0 0 7 0" Style="{StaticResource textBoxButton}"
                       Command = "{Binding NothingCommand}">
                    <Icon:PackIconMaterial Kind="Magnify" Width="15" Foreground="#c7c7c7"/>
                </Button>
            </Grid>

            <!--top menu-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource textBoxButton}" Click="Minimize">
                    <Icon:PackIconMaterial Kind="WindowMinimize" Foreground="#88878e"/>
                </Button>
                <Button Style="{StaticResource textBoxButton}" Click="Maximize">
                    <Icon:PackIconMaterial Kind="WindowMaximize" Foreground="#88878e"/>
                </Button>
                <Button Style="{StaticResource textBoxButton}" Click="OnClose">
                    <Icon:PackIconMaterial Kind ="Close"  Foreground="#88878e"/>
                </Button>
            </StackPanel>
        </Grid>

        <!--chat items section-->
        <Border Grid.Column="1" Grid.Row="1">
            <Grid>
                <!--seprator-->
                <StackPanel Orientation="Horizontal" Margin="30 0 0 30">
                    <Rectangle Width="0.8" Stroke="#dadada" VerticalAlignment="Stretch"/>
                </StackPanel>

                <!--group items-->
                <StackPanel Margin="30 0 15 0">
                    <!--<TextBlock Text="Groups" Margin="25 0 0 5" Style="{StaticResource titleText}"/>-->
                    <ItemsControl ItemsSource="{Binding ChatUsers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <uc:Item Title="{Binding NickName}" 
                                 Message="{Binding Message}" 
                                 Color="{Binding Color}" 
                                 TagName="{Binding TagName}" 
                                 MessageCount="{Binding MessageCount}" 
                                 Image="{Binding Image}"/>  
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>
        
        <!--chat section-->
        <Border CornerRadius="15" Background="#ffffff" Grid.Column="2" Grid.Row="1" Margin="0 0 30 30" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="74*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <!--Top chat menubar-->
                <Grid Background="#ffffff">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="1" Direction="-90" Opacity="0.1"/>
                    </Grid.Effect>

                    <TextBlock Text="Moonlab Std" FontSize="16" Margin="20 15" HorizontalAlignment="Left"/>

                    <StackPanel Orientation="Horizontal" Margin="0 0 10 0" HorizontalAlignment="Right">
                        <TextBlock Text=" " VerticalAlignment="Center" Margin="7 0" Foreground="#8b8a8f" FontSize="11"/>
                        <Button Style="{StaticResource textBoxButton}" Command = "{Binding NothingCommand}">
                            <Icon:PackIconMaterial Kind="DotsVertical" Width="14" Height="14" Foreground="#88878e"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="10 0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding ChatMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <!-- Chat Separator -->
                                        <uc:Chat_Seprator Title="{Binding SeparatorTitle}" Visibility="{Binding SeparatorTitle, Converter={StaticResource NullToVisibilityConverter}}" />
                                        <!-- User Chat -->
                                        <uc:UserChat Username="{Binding NickName}" Image="{Binding Image}" Visibility="{Binding NickName, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <!-- Message Chat -->
                                        <uc:Messagechat Color="{Binding Color}" Message="{Binding Message}" Visibility="{Binding Message, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <!-- Message Time -->
                                        <TextBlock Text="{Binding Time}" Style="{StaticResource timeText}" Visibility="{Binding Time, Converter={StaticResource NullToVisibilityConverter}}" />
                                        <!-- My Message Chat -->
                                        <uc:MyMessageChat Message="{Binding Message}" Visibility="{Binding IsMyMessage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                
                <!--bottom message section-->
                <Grid Grid.Row="2" Margin="10 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <!--message textbox-->
                    <Grid>
                        <TextBlock Margin="15 0 120 0" VerticalAlignment="Center" Foreground="#868686" Panel.ZIndex="1"
                               IsHitTestVisible="False" 
                               Visibility="{Binding ElementName=txtMessage,Converter={StaticResource BoolTovis}}"/>
                        <TextBox x:Name="txtMessage" Style="{StaticResource messageTextbox}" 
                                MaxHeight="100" Text="{Binding SendMsg, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                        <!--buttons-->
                        <!--<StackPanel Orientation="Horizontal" Margin="0 0 8 0" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button Style="{StaticResource textBoxButton}" Margin="0 0 1 0">
                                <Icon:PackIconMaterial Kind="BookmarkMultipleOutline" Width="12" Foreground="#a6a6a6"/>
                            </Button>
                            <Button Style="{StaticResource textBoxButton}">
                                <Icon:PackIconMaterial Kind="Paperclip" Width="12" Foreground="#a6a6a6"/>
                            </Button>
                            <Button Style="{StaticResource textBoxButton}">
                                <Icon:PackIconMaterial Kind="MicrophoneOutline" Width="12" Foreground="#a6a6a6"/>
                            </Button>
                        </StackPanel>-->
                    </Grid>

                    <!--sendbutton-->
                    <Button Grid.Column="1" Margin="5 0 0 0" Style="{StaticResource textBoxButton}"  Command="{Binding SendCommand}">
                        <Icon:PackIconMaterial Kind="Send" Margin="3 0 0 2" Width="16" Foreground="#6f59d4">
                            <Icon:PackIconMaterial.LayoutTransform>
                                <RotateTransform Angle="-45"/>
                            </Icon:PackIconMaterial.LayoutTransform>
                        </Icon:PackIconMaterial>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>