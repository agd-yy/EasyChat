<UserControl x:Class="EasyChat.Controls.Messagechat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="messageChat">
    
    <Border CornerRadius="0 10 10 10" Background="{Binding ElementName=messageChat,Path=Color}" Padding="10 7" HorizontalAlignment="Left" Margin="45 5 0 0">
        <TextBlock Text="{Binding ElementName=messageChat,Path=Message}" FontSize="14" Foreground="#ffffff" VerticalAlignment="Center" Margin="3 0 3 2"/>
    </Border>
</UserControl>
