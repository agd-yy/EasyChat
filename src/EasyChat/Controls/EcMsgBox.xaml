<Window x:Class="EasyChat.Controls.EcMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="120" Width="200" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Border Background="White" CornerRadius="10" BorderBrush="Pink" BorderThickness="2" Padding="20">
            <StackPanel>
                <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" FontSize="16" Foreground="Pink"
                           TextAlignment="Center" />
                <Button Content="好(*╹▽╹*)~" Width="95" Height="30" HorizontalAlignment="Center" Margin="10,10,0,0"
                        Background="Pink" Foreground="White" Click="OkButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>